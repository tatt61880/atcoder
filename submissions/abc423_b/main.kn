func main()
	var n: int :: cui@inputInt()
	
	var l: []int :: #[n]int
	for i(0, n - 1)
		do l[i] :: cui@inputInt()
	end for
	
	var num: int :: 0
	
	for i(0, n - 1)
		do num :+ 1
		if(l[i] = 1)
			break i
		end if
	end for
	
	for i(n - 1, 0, -1)
		do num :+ 1
		if(l[i] = 1)
			break i
		end if
	end for
	
	var ans: int :: lib@max(0, n + 1 - num)
	do cui@print("\{ans}\n")
end func