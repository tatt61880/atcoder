func main()
	var n: int :: cui@inputInt()
	var h: int :: cui@inputInt()
	var x: int :: cui@inputInt()
	var p: []int :: #[n]int
	for i(0, n - 1)
		do p[i] :: cui@inputInt()
	end for
	
	for i(0, n - 1)
		if(h + p[i] >= x)
			var ans: int :: i + 1
			do cui@print("\{ans}\n")
			ret
		end if
	end for
end func
