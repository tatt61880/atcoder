func main()
	var s: []char :: cui@input()
	
	var ans: int :: 0
	var prevDigit: int :: -2
	var prevCount: int :: 0
	var nowDigit: int :: -2
	var nowCount: int :: 0
	for i(0, ^s - 1)
		var d: int :: s[i] $ int - '0' $ int
		if(nowDigit <> d)
			do prevDigit :: nowDigit
			do prevCount :: nowCount
			do nowDigit :: d
			do nowCount :: 1
		else
			do nowCount :+ 1
		end if
		if(nowDigit = prevDigit + 1 & nowCount <= prevCount)
			do ans :+ 1
		end if
	end for
	
	do cui@print("\{ans}\n")
end func
